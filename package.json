{
  "babel": {
    "presets": [
      "es2015-node5"
    ],
    "plugins": [
      [
        "transform-async-to-module-method",
        {
          "module": "bluebird",
          "method": "coroutine"
        }
      ]
    ]
  },
  "dependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-transform-async-to-module-method": "^6.5.2",
    "babel-preset-es2015-node5": "^1.1.2",
    "babel-register": "^6.5.2",
    "bluebird": "^3.3.1",
    "bower": "^1.7.7",
    "express": "^4.13.4",
    "isomorphic-fetch": "^2.2.1",
    "jade": "^1.11.0",
    "koa": "^2.0.0-alpha.3",
    "koa-router": "^7.0.0",
    "node-sass": "^3.4.2"
  },
  "devDependencies": {
    "eslint": "^2.0.0",
    "eslint-config-trip": "^1.0.1",
    "eslint-plugin-babel": "^3.1.0",
    "nodemon": "^1.8.1"
  },
  "engines": {
    "node": ">=5 <6"
  },
  "eslintConfig": {
    "extends": "trip"
  },
  "private": "true",
  "scripts": {
    "postinstall": "bower install && npm run styles",
    "styles": "node-sass --output-style compressed --include-path bower_components --output public ./sass",
    "styles:dev": "node-sass --include-path bower_components --watch --output public ./sass",
    "start:dev": "nodemon --ext js,jade,css",
    "test": "eslint ./server"
  }
}
